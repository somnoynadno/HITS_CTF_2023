@model ResultViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-start">
    <h1 class="display-4">Welcome</h1>
    <p style="font-size: x-large">@Model.Task</p>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckResult" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" id="Error message" class="text-danger"></span>
            </div>
            @if (@Model.Error != null)
                    {
                        <p class="text-danger">@Model.Error</p>
                    }
            <div style="padding: 10px"></div>
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>