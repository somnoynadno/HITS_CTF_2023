@model CreateBoardDTO
@{
    ViewData["Title"] = "Create board";
}
<div class="d-flex flex-wrap flex-row justify-content-center align-content-center h-100 flex-grow-1 flex-fill">
    <form asp-action="create" method="post"
          class="d-flex flex-wrap flex-row align-content-center justify-content-center flex-grow-1">
        <h4 class="display-6">Creating group</h4>
        <div class="from-group col-12">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group from-check col-12 mt-2">
            <input type="checkbox" asp-for="IsPrivate" class="form-check-input" />
            <label asp-for="IsPrivate">Private</label>
        </div>
        <div asp-validation-summary="All" class="text-danger mt-2"></div>

        <div class="d-flex flex-row mt-3 justify-content-end col-12 btn-group">
            <button type="button" class="btn btn-danger" return>Cancel</button>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>